<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Desampa Inclusivo</title>
    <link rel="icon" type="image/png" href="/img/favicon-16x16.png" sizes="16x16">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" crossorigin="anonymous" />
</head>
<body>
    <header>
        <div class="top-line"></div>
        <div class="container header-container">
            <img src="~/img/logo adi.png" alt="Logo ADI" class="logo">
            <nav>
                <ul class="nav-links">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li><a href="#">Emprendimientos</a></li>
                    <li><a href="#">Videos Tutoriales</a></li>
                    <li><a href="#">Ya! Danza</a></li>
                    <li><a href="#">Deportes Adaptados</a></li>
                    <li><a href="#">Contacto</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <main class="main-header-hero">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 - ADI</p>
    </footer>

    <!-- Implementación del widget de accesibilidad -->
    <script>
        // Script Inline Provisional
        (function (d) {
            var s = d.createElement("script");
            s.setAttribute("data-account", "laLG20Sv3q");
            s.setAttribute("src", "https://cdn.userway.org/widget.js");
            (d.body || d.head).appendChild(s);
        })(document)
    </script>
    <noscript>
        Please ensure Javascript is enabled for purposes of
        <a href="https://userway.org">website accessibility</a>
    </noscript>

    @RenderSection("Scripts", required: false)
</body>
</html>
